<Prefab>
  <Variables></Variables>
  <VisualDefinitions>
    <VisualDefinition
        Name="BottomMenu"
        DelayOnBegin="0.2"
        TransitionDuration="0.4">
      <VisualState
          PositionYOffset="0"
          State="Default" />
    </VisualDefinition>
    <VisualDefinition
        Name="OptionsMenu"
        DelayOnBegin="0.2"
        TransitionDuration="0.4">
      <VisualState
          PositionYOffset="0"
          State="Default" />
    </VisualDefinition>
  </VisualDefinitions>
  <Window>
    <!--Background-->
    <Widget
        WidthSizePolicy="StretchToParent"
        HeightSizePolicy="StretchToParent"
        Brush="Frame1Brush">
      <Children>
        <!--Main Panel-->
        <Widget
            HeightSizePolicy="Fixed"
            WidthSizePolicy="Fixed"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            SuggestedHeight="500"
            SuggestedWidth="600"
            Brush="Recruitment.Frame"
            DoNotAcceptEvents="true">
          <Children>
            <Widget
                HeightSizePolicy="StretchToParent"
                WidthSizePolicy="StretchToParent">
              <Children>
                <!-- TownDescription -->
                <RichTextWidget
                    HeightSizePolicy="StretchToParent"
                    WidthSizePolicy="StretchToParent"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Brush="CenterAlignedMediumFont"
                    MarginTop="-400"
                    Text="@TownDescription" />
                <!-- TownOwnership -->
                <RichTextWidget
                    HeightSizePolicy="StretchToParent"
                    WidthSizePolicy="StretchToParent"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Brush="CenterAlignedMediumFont"
                    MarginTop="-200"
                    Text="@TownOwnership" />
                <!--Banner-->
                <MaskedTextureWidget
                    HeightSizePolicy="Fixed"
                    WidthSizePolicy="Fixed"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Brush="Kingdom.TornBanner"
                    SuggestedHeight="125"
                    SuggestedWidth="100"
                    PositionXOffset="0"
                    AdditionalArgs="@AdditionalArgs"
                    ImageId="@Id"
                    ImageTypeCode="@ImageTypeCode"
                    OverlayTextureScale="1.75"
                    MarginTop="0"
                    DataSource="{FactionVisual}" />
                <!-- RevoltMood -->
                <RichTextWidget
                    HeightSizePolicy="StretchToParent"
                    WidthSizePolicy="StretchToParent"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Brush="CenterAlignedMediumFont"
                    MarginTop="300"
                    Text="@RevoltMood" />
                <!-- RevoltProgress -->
                <RichTextWidget
                    HeightSizePolicy="StretchToParent"
                    WidthSizePolicy="StretchToParent"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Brush="CenterAlignedMediumFont"
                    MarginTop="400"
                    Text="@RevoltProgress" />
              </Children>
            </Widget>
          </Children>
        </Widget>
        <Standard.DialogCloseButtons
            VisualDefinition="BottomMenu"
            PositionYOffset="100"
            Parameter.ShowCancel="false"
            Parameter.DoneButtonAction="ExitMenu"
            Parameter.DoneButtonText="@DoneDesc" />
      </Children>
    </Widget>
  </Window>
</Prefab>