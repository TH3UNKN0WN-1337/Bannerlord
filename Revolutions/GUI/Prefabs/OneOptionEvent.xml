                <Widget
                        DoNotAcceptEvents="true"
                        WidthSizePolicy="Fixed"
                        HeightSizePolicy="Fixed"
                        SuggestedHeight="700"
                        SuggestedWidth="1200"
                        MarginTop="50"
                        HorizontalAlignment="Center"
                        Brush="Recruitment.Frame">
                </Widget>
                <!--Close Screen Button// Parameter.DoneButtonAction="ExecuteClose"-->
