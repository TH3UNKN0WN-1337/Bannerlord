                Name="BottomMenu"
                DelayOnBegin="0.2"
                TransitionDuration="0.4">
            <VisualState
                    PositionYOffset="0"
                    State="Default" />
        </VisualDefinition>
        <VisualDefinition
                Name="OptionsMenu"
                DelayOnBegin="0.2"
                TransitionDuration="0.4">
            <VisualState
                    PositionYOffset="0"
                    State="Default" />
        </VisualDefinition>
    </VisualDefinitions>
    <Window>
        <Widget
                WidthSizePolicy="StretchToParent"
                HeightSizePolicy="StretchToParent"
                Brush="Frame1Brush">
