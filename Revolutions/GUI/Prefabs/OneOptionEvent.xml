<Prefab>
    <Variables></Variables>
    <VisualDefinitions>
        <VisualDefinition
                Name="BottomMenu"
                DelayOnBegin="0.2"
                TransitionDuration="0.9">
            <VisualState
                    PositionYOffset="0"
                    State="Default" />
        </VisualDefinition>
    </VisualDefinitions>
    <Window>
        <Widget
                DoNotAcceptEvents="true"
                WidthSizePolicy="Fixed"
                HeightSizePolicy="Fixed"
                SuggestedHeight="700"
                SuggestedWidth="1200"
                MarginTop="50"
                HorizontalAlignment="Center"
                Brush="Recruitment.Frame">
            <Children>
                <TextWidget
                        MarginTop="200"
                        MarginLeft="50"
                        MarginRight="50"
                        WidthSizePolicy="StretchToParent"
                        HeightSizePolicy="StretchToParent"
                        Brush="Popup.Button.Text"
                        Text="@Description"
                />
                <ButtonWidget
                        DoNotPassEventsToChildren="true"
                        WidthSizePolicy="Fixed"
                        HeightSizePolicy="Fixed"
                        SuggestedWidth="1000"
                        SuggestedHeight="80"
                        MarginTop="600"
                        HorizontalAlignment="Center"
                        Brush="Recruitment.Frame"
                        Command.Click="ExitMenu">
                    <Children>
                        <TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="Popup.Button.Text" Text="@OptionText" />
                    </Children>
                </ButtonWidget>
            </Children>
        </Widget>
    </Window>
</Prefab>